{
  "baseBranches": ["main", "master","R1-2023","R3-2022"],
  "branchPrefix": "renovate_",
  "automerge": false,
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "updateLockFiles": false,
  "rangeStrategy": "replace",
  "ignoreDeps": ["@rehooks/local-storage","colors","final-form-arrays","final-form","minimist","moment","react-dom","react-final-form-arrays","react-final-form","react-intl","react-query","react-redux","react-router-dom","react-router","react-titled","react-virtualized-auto-sizer","react","redux-form","redux-observable","redux","rxjs","swr","zustand"],

  "major": {
    "enabled": false
  },
  "minor": {
    "enabled": false
  },
  "patch": {
    "enabled": true
  },

  "regexManagers": [
    { 
      "fileMatch": [ "^install-extras.json$" ],
      "matchStrings": [ "\\\"(?<moduleName>(mod-|edge-|okapi).*?)-(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+?)\\\"" ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "folioorg/{{{moduleName}}}"
    }
  ],
 
  "packageRules": [
    { 
      "baseBranchList": ["main", "master"],
      "packagePatterns": ["^@folio/","^folioorg/"],
      "groupName": "Main branch updates",
      "updateTypes": ["patch"], 
      "enabled": true
    },
    { 
      "baseBranchList": ["R3-2022"],
      "packagePatterns": ["^@folio/", "^folioorg/"],
      "groupName": "FOLIO R3 2022 updates",
      "updateTypes": ["patch"], 
      "enabled": true
    },
    { 
      "baseBranchList": ["R1-2023"],
      "packagePatterns": ["^@folio/", "^folioorg/"],
      "groupName": "FOLIO R1 2023 updates",
      "updateTypes": ["patch"], 
      "enabled": true
    }
  ]
}
