{
  "baseBranches": ["main", "master","R2-2023","R1-2023", "R2-2023-Consortia","R1-2024", "R1-2024-Consortia"],
  "branchPrefix": "renovate_",
  "automerge": false,
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "updateLockFiles": false,
  "rangeStrategy": "replace",
  "ignoreDeps": ["eslint","lodash","react","react-dom","react-redux","redux"],

  "major": {
    "enabled": false
  },
  "minor": {
    "enabled": false
  },
  "patch": {
    "enabled": true
  },

  "regexManagers": [
    { 
      "fileMatch": [ "^install-extras.json$" ],
      "matchStrings": [ "\\\"(?<moduleName>(mod-|edge-|okapi).*?)-(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+?)\\\"" ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "folioorg/{{{moduleName}}}"
    }
  ],
 
  "packageRules": [
    { 
      "baseBranchList": ["main", "master"],
      "packagePatterns": ["^@folio/","^folioorg/"],
      "groupName": "Main branch updates",
      "updateTypes": ["patch"], 
      "enabled": true
    },
    { 
      "baseBranchList": ["R1-2023"],
      "packagePatterns": ["^@folio/", "^folioorg/"],
      "groupName": "FOLIO R1 2023 updates",
      "updateTypes": ["patch"], 
      "enabled": true
    },
    { 
      "baseBranchList": ["R2-2023"],
      "packagePatterns": ["^@folio/", "^folioorg/"],
      "groupName": "FOLIO R2 2023 updates",
      "updateTypes": ["patch"], 
      "enabled": true
    },
    { 
      "baseBranchList": ["R2-2023-Consortia"],
      "packagePatterns": ["^@folio/", "^folioorg/"],
      "groupName": "FOLIO R2 2023 updates Consortia",
      "updateTypes": ["patch"], 
      "enabled": true
    },
    {
      "baseBranchList": ["R1-2024-Consortia"],
      "packagePatterns": ["^@folio/", "^folioorg/"],
      "groupName": "FOLIO R1 2024 updates Consortia",
      "updateTypes": ["patch"],
      "enabled": true
    },
    {
      "baseBranchList": ["R1-2024"],
      "packagePatterns": ["^@folio/", "^folioorg/"],
      "groupName": "FOLIO R1 2024 updates",
      "updateTypes": ["patch"],
      "enabled": true
    }
  ]
}
