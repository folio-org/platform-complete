{
  "baseBranches": ["main", "master", "R1-2025"],
  "branchPrefix": "renovate_",
  "automerge": false,
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "updateLockFiles": false,
  "rangeStrategy": "replace",
  "ignoreDeps": [
    "eslint",
    "lodash",
    "react",
    "react-dom",
    "react-redux",
    "redux"
  ],
  "major": {"enabled": false},
  "minor": {"enabled": false},
  "patch": {"enabled": true},
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^install-extras.json$"],
      "matchStrings": [
        "\\\"(?<moduleName>(mod-|edge-|okapi).*?)-(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+?)\\\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "folioorg/{{{moduleName}}}"
    }
  ],
  "packageRules": [
    {
      "matchBaseBranches": ["main", "master"],
      "groupName": "Main branch updates",
      "matchUpdateTypes": ["patch"],
      "enabled": true,
      "matchPackageNames": ["/^@folio//", "/^folioorg//"]
    },
    {
      "matchBaseBranches": ["R1-2025"],
      "groupName": "FOLIO R1 2025 updates",
      "matchUpdateTypes": ["patch"],
      "enabled": true,
      "matchPackageNames": ["/^@folio//", "/^folioorg//"]
    }
  ]
}
